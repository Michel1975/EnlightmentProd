<% provide(:title, 'Medlemslogin') %>
<% provide(:description, 'Login for medlemmer') %>
<% content_for :breadcrumps do %>
  <li class="active">Medlemslogin</li>
<% end %>
<div class="row-fluid">
  <div class="span12">
    <%= form_tag shared_member_sessions_path, class: "log-page" do %>    
      <h3>Login p√• din konto</h3>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= text_field_tag :email, "", class: "input-xlarge", placeholder: "Email"%>    
      </div>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-lock"></i></span>
        <%= password_field_tag :password, "", placeholder: "Password" %>    
      </div>
      <div class="controls form-inline">
         <label class="checkbox"><input type="checkbox" /> Husk loginoplysninger</label>
        <%= button_tag "Login", type: "submit", class: "btn-u pull-right" %>  
      </div>
      <hr />
      <h4>Glemt dit password ?</h4>
      <p>Klik <%= link_to "her", new_shared_password_reset_path, class: "color-green" %> for at nulstille dit password</p>
    <% end %>
  </div><!--/span12-->
</div><!--/row fluid-->

<script type="text/javascript">
    jQuery(document).ready(function() {
        App.init();
    });
</script>

  
  
