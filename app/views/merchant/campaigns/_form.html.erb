<h2>Opret sms kampagne:</h2>
<%= form_for [:merchant, @campaign] do |f| %>  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_field :message %>
  </div>
  <div class="field">
    <%= f.label :activation_time %>
    <%= f.datetime_select :activation_time, default: 1.days.from_now %>
  </div>  
  <div class="field">
    <%= f.label :instant_activation %>
    <%= f.check_box :instant_activation %>    
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>