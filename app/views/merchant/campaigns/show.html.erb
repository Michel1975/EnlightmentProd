<% provide(:title, 'Sms kampagne oplysninger') %>
<div class="span11">
  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Titel</th>
        <th>Besked</th>    
        <th>Afsendelse</th>
        <th>Status</th>
        <th>Omkostninger</th>
        <th>Oprettet</th>
        <th>Senest opdateret</th>
        <th>Handling</th>
      </tr>
    </thead>
    <tbody>     
      <tr>
        <td> <%= @campaign.title %> </td>
        <td> <%= @campaign.message %> </td> 
        <td> <%= @campaign.activation_time %> </td>
        <td> <%= @campaign.status %> </td> 
        <td> <%= @campaign.total_cost %> kr. </td> 
        <td><%= @campaign.created_at %></td>
        <td><%= @campaign.updated_at %></td> 
        <td> 
          <%= link_to "Slet sms kampagne", [:merchant, @campaign], method: :delete,
            data: { confirm: "Er du sikker?" } %>         
        </td>      
      </tr>      
    </tbody>
  </table>
</div>

<h4>Modtagere</h4>
<div class="span10">
  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Navn</th>
        <th>Email</th>
        <th>Telefon</th>  
        <th>Status</th> 
      </tr>
    </thead>
    <tbody>
      <% @campaign.campaign_members.each do |campaign_member| %>
      <tr>
        <td><%= campaign_member.subscriber.member.name%></td>
        <td><%= campaign_member.subscriber.member.user.try(:email)%></td>
        <td><%= campaign_member.subscriber.member.phone %></td>
        <td><%= campaign_member.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div> 
  <%= link_to 'Rediger', edit_merchant_campaign_path(@campaign) %> |
  <%= link_to 'Tilbage', merchant_campaigns_path %>
</div>