<% provide(:title, 'Stamdata for butik') %>
<h1>Stamdata for butik</h1>
<p id="notice"><%= notice %></p>

<p>
  <b>Butik:</b>
  <%= @merchant_store.store_name %>
</p>

<p>
  <b>Ejer:</b>
  <%= @merchant_store.owner %>
</p>

<p>
  <b>Description:</b>
  <%= @merchant_store.description %>
</p>

<p>
  <b>Gade:</b>
  <%= @merchant_store.street %>
</p>

<p>
  <b>Husnummer:</b>
  <%= @merchant_store.house_number %>
</p>

<p>
  <b>Postnummer:</b>
  <%= @merchant_store.postal_code %>
</p> 

<p>
  <b>By:</b>
  <%= @merchant_store.city %>
</p>

<p>
  <b>Telefon:</b>
  <%= @merchant_store.phone %>
</p>

<p>
  <b>SMS_keyword:</b>
  <%= @merchant_store.sms_keyword %>
</p>

<p>
  <b>Billede:</b>
  <%= cl_image_tag(@merchant_store.store_picture, :width => 150, :height => 150, :crop => :fit) %>
</p>

<h4>Åbningstider</h4>
<div class="span10">
  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Dag</th>
        <th>Åben</th>
        <th>Lukket</th>  
      </tr>
    </thead>
    <tbody>
      <% @merchant_store.business_hours.each do |business_hour| %>
      <tr>
        <td><%= business_hour.day %></td>
        <td><%= business_hour.open_time.to_formatted_s(:time) %></td>
        <td><%= business_hour.close_time.to_formatted_s(:time)  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Rediger', edit_merchant_merchant_store_path(current_merchant_store) %>
<%= link_to 'Tilbage', merchant_merchant_store_path(current_merchant_store) %>

