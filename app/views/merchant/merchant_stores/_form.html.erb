<%= form_for(@merchant_store, html: { class: "form-inline"}) do |f| %>                 
  
  <div class="control-group">
    <%= f.label :store_name, class: "control-label" %>
    <div class="controls">                  
      <%= f.text_field :store_name%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :owner, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :owner %>
    </div>                 
  </div>
  <div class="hr"></div>
  <div class="control-group">
    <%= f.label :street, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :street %>
    </div>                 
  </div>
  <div class="control-group">
    <%= f.label :house_number, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :house_number %>
    </div>                 
  </div>
  <div class="control-group">
    <%= f.label :floor, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :floor %>
    </div>                 
  </div>
  <div class="control-group">
    <%= f.label :side, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :side %>
    </div>                 
  </div>
  <div class="control-group">
    <%= f.label :postal_code, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :postal_code %>
    </div>                 
  </div>
  <div class="control-group">
    <%= f.label :city, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_field :city %>
    </div>                 
  </div>
  <div class="hr"></div>
  <div class="control-group">
    <%= f.label :keyword, class: "control-label" %>  
    <div class="controls">
      <%= f.text_field :keyword, readonly: "true" %>
    </div>
  </div> 
  <div class="control-group">
    <%= f.label :description, class: "control-label" %>                  
    <div class="controls">
      <%= f.text_area :description %>
    </div>                 
  </div>
  <div class="control-group">
    <%= f.label :avatar, class: "control-label" %>                  
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>                 
  </div>
  <div class="controls form-inline">                    
    <%= button_tag type: "submit", class: "btn btn-info" do %> 
    <i class="icon-ok bigger-110"> Gem oplysninger </i>
    <% end %>
  </div>
  <% end %>



  
  



  