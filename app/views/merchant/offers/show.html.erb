<% provide(:title, "Tilbudsdetaljer") %>
<div class="span11">
  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Titel</th>
        <th>Beskrivelse</th>
        <th>Gyldig fra</th>
        <th>Gyldig til</th>        
        <th>SMS p√•mindelser</th>
        <th>Oprettet</th>
        <th>Senest opdateret</th>
        <th>Handling</th>
      </tr>
    </thead>
    <tbody>     
      <tr>
        <td> <%= @offer.title %></td>
        <td> <%= @offer.description %></td>
        <td> <%= @offer.valid_from %></td>
        <td> <%= @offer.valid_to %></td>
        <td>TBD</td>
        <td><%= @offer.created_at %></td>
        <td><%= @offer.updated_at %></td>
        <td><%= link_to [:merchant, @offer], method: :delete, data: { confirm: "Er du sikker?" } do %>
              <button class="btn btn-mini btn-danger">
                <i class="icon-trash bigger-120"></i>
              </button>
            <% end %>
        </td>
      </tr>      
    </tbody>
  </table>
</div>

<p>
  <b>Billede:</b>
  <%= cl_image_tag(@offer.offer_picture, :width => 150, :height => 150, :crop => :fit) %>
</p>
 
