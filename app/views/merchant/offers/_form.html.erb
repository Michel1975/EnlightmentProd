<%= form_for [:merchant, @offer] do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="control-group">
    <%= f.label :offer_picture %>
      <div class="form_controls">
        <div class="upload_button_holder">
          <%= link_to("Upload", "#", :class => "upload_button") %>
          <%= f.cl_image_upload(:offer_picture) %>
        </div>
        <span class="status"></span>
      </div>
  </div>
  <div class="form_line">
    <div class="form_controls">
      <div class="preview"><%= cl_image_tag(@offer.offer_picture, :width => 150, :height => 150, :crop => :fit) if @offer.offer_picture %></div>
    </div>
    <p>
    <label>
      <%= f.check_box :remove_offer_picture %>
      Fjern billede
    </label>
  </p>
  </div>

  <div class="field">
    <%= f.label :valid_from %><br />
    <%= f.date_select :valid_from %>
  </div>
  <div class="field">
    <%= f.label :valid_to %><br />
    <%= f.date_select :valid_to %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <%= f.hidden_field :offer_picture_size %>
<% end %>