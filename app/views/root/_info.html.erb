
<div class="infobox-wrapper">
    <div id="infobox">
            <div>
                <%= cl_image_tag(merchant.image.try(:picture), :width => 100, :height => 100, :crop => :fit, class: "img-rounded") %> 
            </div>
             <div class="title"><%= merchant.store_name %></div>
    		<div class="signup">
    		<%= link_to display_store_path(merchant.id) do %>
              <button class="btn btn-mini btn btn-success">Se detaljer</button>
            <% end %>
    		</div>
       
    	
    	<div class="address"><%= merchant.short_description %></div><br/>
    	<div class="address"><%= merchant.map_address %></div>
    	<div><%= merchant.phone %></div>

    	<div><span style="font-weight:bold">Medlemsstatus</span><br/>
    		<%= status ? "Du er medlem" : "Ikke medlem" %>
    	</div>
    	
    </div>
</div>

