<div class="container">	
        <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "alert alert-#{key}") %>
        <% end %>   	
		<div class="row-fluid margin-bottom-10">            
            <%= form_tag(stop_sms_save_path, class: "reg-page") do |f| %> 
                <h3>Afmeld SMS notifikationer fra butik</h3> 
                <div class="controls"> 
                    <%= label_tag :store %>
                    <%= text_field_tag :store, @merchant_store.store_name, {class: "span-12", readonly: "true"} %>
                    <%= label_tag :phone %>
                    <%= text_field_tag :phone, @member.phone,  {class: "span12", readonly: "true"} %>
                    <%= hidden_field_tag 'member_id', @member.id %> 
                    <%= hidden_field_tag 'merchant_store_id', @merchant_store.id %> 
                    <%= hidden_field_tag 'token', @token %>                  
                </div> 
                <div class="controls form-inline">                    
                    <%= button_tag "Afmeld", type: "submit", class: "btn-u pull-right" %>
                </div>
                <br/>
                <hr />
            <% end %>        
        </div><!--/row-fluid-->
	</div><!--/container-->		
</div><!--/body-->
<!--=== End Content Part ===-->
