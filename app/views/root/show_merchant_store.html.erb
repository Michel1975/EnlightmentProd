<% provide(:title, @merchant_store.store_name) if @merchant_store %>

<p id="notice"><%= notice %></p>

<% if logged_in? && current_member_user && %>
  <% if @subscribed %>
    <%= form_for(@merchant_store.subscribers.find_by_member_id(current_member_user.id), :url => unsubscribe_member_path(current_member_user.id),
             html: { method: :delete }, data: { confirm: "Er du sikker?" }) do |f| %>
      <%= f.submit "Afmeld", class: "btn btn-large btn-primary" %>
    <% end %>
  <% else %>
    <%= form_for @merchant_store.subscribers.build(member_id: current_member_user.id), :url => signup_member_path do |f| %>
      <div><%= f.hidden_field :member_id %></div>
      <div><%= f.hidden_field :merchant_store_id %></div>
      <%= f.submit "Tilmeld", class: "btn btn-large btn-primary" %>
    <% end %>
  <% end %>
<% end %>


<p>
  <b>Butik:</b>
  <%= @merchant_store.store_name %>
</p>

<p>
  <b>Ejer:</b>
  <%= @merchant_store.owner %>
</p>

<p>
  <b>Description:</b>
  <%= @merchant_store.description %>
</p>

<p>
  <b>Gade:</b>
  <%= @merchant_store.street %>
</p>

<p>
  <b>Husnummer:</b>
  <%= @merchant_store.house_number %>
</p>

<p>
  <b>Postnummer:</b>
  <%= @merchant_store.postal_code %>
</p> 

<p>
  <b>By:</b>
  <%= @merchant_store.city %>
</p>

<h4>Åbningstider</h4>
<div class="span10">
  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Dag</th>
        <th>Åben</th>
        <th>Lukket</th>  
      </tr>
    </thead>
    <tbody>
      <% @merchant_store.business_hours.each do |business_hour| %>
      <tr>
        <td><%= business_hour.day %></td>
        <td><%= business_hour.open_time.to_formatted_s(:time) %></td>
        <td><%= business_hour.close_time.to_formatted_s(:time)  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
