<h1>Besked fejl</h1>
<div class="span11">
<%= will_paginate @message_errors, class:"paging_bootstrap pagination"%>
	<table id="sample-table-1" class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Afsender</th>
				<th>SMS-kode</th>
				<th>Oprettet</th>
			</tr>
		</thead>
		<tbody>
			<% @message_errors.each do |error| %>
			<tr>
				<td> <%= error.recipient %></td>	
				<td> <%= error.text %></td>
				<td> <%= error.created_at %></td>
				<td> <%= error.updated_at %></td>				
			</tr>
			<% end %>
		</tbody>
	</table>
</div>