<% provide(:title, 'SMS Logbog') %>
<% provide(:description, 'Log over alle afsendte beskeder') %>
<% content_for :breadcrumps do %>
  <li class="active">SMS Logbog</li>
<% end %>
<h3 class="header blue lighter smaller">
	<i class="icon-signal bigger-110"></i>
	SMS Logbog
</h3>
<div class="row-fluid">
	<div class="span12">

		<%= will_paginate @message_notifications, class:"paging_bootstrap pagination"%>
		<table id="sample-table-1" class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>Butik</th>
					<th>Type</th>
					<th>Modtager</th>
					<th>Besked id</th>
					<th>Kampagne-kode</th>
					<th>Update-kode</th>
					<th>Update beskrivelse</th>			
					<th>Oprettet</th>
					<th>Opdateret</th>		
				</tr>
			</thead>
			<tbody>
				<% @message_notifications.each do |notification| %>
				<tr>
					<td> <%= empty_attribute_info( notification.merchant_store.try(:store_name) ) %> </td>
					<td> <%= notification.notification_type %> </td>
					<td> <%= notification.recipient %> </td>	
					<td> <%= notification.message_id %> </td>
					<td> <%= notification.campaign_group_id %> </td>
					<td> <%= notification.status_code.name %> </td>
					<td> <%= notification.status_code.description %> </td>
					<td> <%= notification.created_at %> </td>
					<td> <%= notification.updated_at %> </td>				
				</tr>
				<% end %>
			</tbody>
		</table>
	</div><!-- /.span12 -->
</div><!-- /.row-fluid -->